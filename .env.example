# .env file for HayStack Multi-Tenant Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================

# Totara LMS Database (PostgreSQL)
TOTARA_DB_HOST=localhost
TOTARA_DB_PORT=5432
TOTARA_DB_NAME=totara_db
TOTARA_DB_USER=totara_user
TOTARA_DB_PASSWORD=your_totara_password

# Moodle LMS Database (MySQL)
MOODLE_DB_HOST=localhost
MOODLE_DB_PORT=3306
MOODLE_DB_NAME=moodle_db
MOODLE_DB_USER=moodle_user
MOODLE_DB_PASSWORD=your_moodle_password

# Custom LMS Database (MySQL/PostgreSQL)
CUSTOM_DB_HOST=localhost
CUSTOM_DB_PORT=3306
CUSTOM_DB_NAME=custom_lms_db
CUSTOM_DB_USER=custom_user
CUSTOM_DB_PASSWORD=your_custom_password

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=haystack.log

# Performance Settings
CACHE_TTL_SECONDS=120
MAX_QUERY_RESULTS=1000
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_OVERFLOW=20

# Security Settings
ENABLE_AUDIT_LOGGING=true
RBAC_CACHE_TTL=120

# Multi-Tenant Settings
DEFAULT_TENANT=main_tenant
ENABLE_SCHEMA_CACHING=true

# =============================================================================
# TENANT-SPECIFIC CONFIGURATIONS
# =============================================================================

# Tenant A (University A - Totara)
TENANT_A_KEY=university_a
TENANT_A_ADMIN_USERS=2,10
TENANT_A_PRIVILEGED_ROLES=admin,manager,editingteacher

# Tenant B (University B - Moodle)  
TENANT_B_KEY=university_b
TENANT_B_ADMIN_USERS=1,5
TENANT_B_PRIVILEGED_ROLES=admin,manager,editingteacher,teacher

# Tenant C (Company C - Custom)
TENANT_C_KEY=company_c
TENANT_C_ADMIN_USERS=100,101
TENANT_C_PRIVILEGED_ROLES=admin,supervisor,trainer